<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <VBox
        class="sapUiResponsiveContentPadding"
        width="100%"
        id="vbox1"
    >
        <Toolbar id="toolbar1" width="600px">
            <Title
                text="Generated November 4, 2025"
                level="H3"
                id="title1"
            />
            <ToolbarSpacer id="sp1"/>
            <!-- Open in new tab / download -->
            <Link
                text="Download PDF"
                href="assets/prospect-report-after.pdf"
                target="_blank"
                icon="sap-icon://download"
                id="dl1"
            />
        </Toolbar>

        <core:HTML
            id="prospectPdfFrame"
            sanitizeContent="false"
            content="&lt;iframe
               src='assets/prospect-report-after.pdf#toolbar=0&amp;navpanes=0&amp;scrollbar=1'
               style='border:0;width:600px;height:600px;'
               loading='lazy'&gt;&lt;/iframe&gt;"
        />
    </VBox>
</core:FragmentDefinition>
