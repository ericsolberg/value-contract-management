{
  "name": "ValueContractManagement",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@cap-js/hana": "^2",
    "@sap/cds": "^9",
    "axios": "^1.12.2",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": "^9",
    "cds-plugin-ui5": "^0.13.0"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-customers": "cds watch --open valuecontract.customers.customers/index.html?sap-ui-xx-viewCache=false --livereload false",
    "watch-contracts": "cds watch --open valuecontract.contracts.contracts/index.html?sap-ui-xx-viewCache=false --livereload false"
  },
  "private": true,
  "workspaces": [
    "app/*"
  ],
  "sapux": [
    "app/customers",
    "app/contracts"
  ],
  "cds": {
    "requires": {
      "[production]": {
        "db": "hana"
      }
    }
  }
}
